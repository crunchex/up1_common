<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="up1">

  <xacro:property name="wheel_offset_y" value="0.12005" />
  <xacro:property name="wheel_offset_z" value="0.02016" />

  <xacro:macro name="wheel" params="prefix end reflect wheel_offset_x">
    <!-- ============================   Wheel   ============================ -->

    <!-- Wheel Joint -->
    <joint name="base_to_${prefix}_${end}_wheel" type="continuous">
      <parent link="base_link" />
      <child link="${prefix}_${end}_wheel" />
      <origin rpy="0 0 0" xyz="${wheel_offset_x} ${-1*reflect*wheel_offset_y} -${wheel_offset_z}" />
      <axis xyz="0 1 0" />
    </joint>
    <!-- Wheel Link -->
    <link name="${prefix}_${end}_wheel">
      <visual>
        <geometry>
          <mesh filename="package://up1_description/meshes/base/wheel_${prefix}_viz.dae" scale="0.001 0.001 0.001" />
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://up1_description/meshes/base/wheel_${prefix}.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.01791"/>
        <inertia ixx="0.00000575118" ixy="-0.00000000224" ixz="0.0"
                 iyy="0.00000575882" iyz="0.0" izz="0.0000094354"/>
      </inertial>
    </link>

  </xacro:macro>

</robot>
